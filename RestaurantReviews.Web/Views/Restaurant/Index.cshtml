@model IEnumerable<RestaurantReviews.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<h2>Restaurants</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Show Top 3 Rated Restaurants", "Index", new { sort = ViewBag.Top3RatingSortParm }) |
    @Html.ActionLink("Sort By Name A-Z/Z-A", "Index", new { sort = ViewBag.NameSortParm }) |
    @Html.ActionLink("Show By Top Rated / Worst Rated Restaurants", "Index", new { sort = ViewBag.TopRatingSortParm })
</p>
<form asp-controller="Restaurant" asp-action="Index">
    <p>
        Search by Restaurant: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { SearchString = ViewBag.Search })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvgRating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgRating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Reviews", "Details", "Review", new { id = item.Id }, null) |
                @Html.ActionLink("Add a Review", "Create", "Review", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
